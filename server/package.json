{
  "name": "serpyx-backend",
  "version": "1.0.0",
  "description": "Serpyx Backend API - Production Ready",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "start:dev": "nodemon server.js",
    "start:legacy": "node app.js",
    "prod": "pm2 start server.js --name serpyx-backend",
    "stop": "pm2 stop serpyx-backend",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "migrate": "node src/database/migrate.js",
    "seed": "node src/database/seed.js",
    "docker:build": "docker build -t serpyx-backend .",
    "docker:run": "docker run -p 5000:5000 serpyx-backend",
    "health": "node -e \"fetch('http://127.0.0.1:5000/api/health').then(r=>r.text()).then(console.log).catch(console.error)\""
  },
  "keywords": [
    "serpyx",
    "backend",
    "api",
    "blockchain",
    "game",
    "express",
    "sqlite"
  ],
  "author": "Serpyx Development Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.7",
    "sqlite3": "^5.1.6",
    "sqlite": "^5.0.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/serpyx/serpyx-backend"
  },
  "homepage": "https://serpyx.com"
}

