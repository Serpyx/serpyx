@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  body {
    @apply bg-gradient-to-br from-gray-900 via-gray-800 to-black text-white;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
  }
}

@layer components {
  .btn-primary {
    @apply bg-gradient-to-r from-snake-500 to-snake-600 hover:from-snake-600 hover:to-snake-700 text-white font-bold py-3 px-6 rounded-lg transition-all duration-300 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-snake-400 focus:ring-opacity-50 shadow-lg shadow-snake-500/20 hover:shadow-xl hover:shadow-snake-500/30;
  }
  
  .btn-secondary {
    @apply bg-gradient-to-r from-gray-600 to-gray-700 hover:from-gray-700 hover:to-gray-800 text-white font-bold py-3 px-6 rounded-lg transition-all duration-300 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-gray-400 focus:ring-opacity-50 shadow-lg shadow-gray-500/20 hover:shadow-xl hover:shadow-gray-500/30;
  }
  
  .card {
    @apply bg-gray-800/60 backdrop-blur-xl border border-gray-700/50 rounded-2xl p-6 shadow-2xl hover:shadow-3xl transition-all duration-300 hover:border-gray-600/50;
  }
  
  .input-field {
    @apply bg-gray-700/60 backdrop-blur-sm border border-gray-600/50 rounded-xl px-4 py-3 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-snake-500 focus:border-transparent transition-all duration-300 shadow-lg shadow-gray-900/20;
  }
  
  .coin-glow {
    @apply animate-pulse-glow;
  }
  
  .snake-segment {
    @apply bg-snake-500 rounded-sm;
  }
  
  .food-item {
    @apply bg-yellow-400 rounded-full animate-pulse;
  }
  
  .bonus-food {
    @apply bg-purple-500 rounded-full animate-pulse-glow;
  }
  
  /* Professional Navbar Styles */
  .navbar-glass {
    @apply bg-gradient-to-r from-gray-900/95 via-gray-800/95 to-gray-900/95 backdrop-blur-xl border-b border-snake-500/30 shadow-2xl shadow-black/20;
  }
  
  .nav-link-active {
    @apply text-snake-400 bg-snake-500/10 border border-snake-500/30 shadow-lg shadow-snake-500/20;
  }
  
  .nav-link-hover {
    @apply text-gray-300 hover:text-snake-400 hover:bg-gray-800/50 hover:border hover:border-gray-600/50;
  }
  
  /* Professional Card Styles */
  .card-premium {
    @apply bg-gradient-to-br from-gray-800/80 to-gray-900/80 backdrop-blur-xl border border-gray-600/30 rounded-2xl p-6 shadow-2xl hover:shadow-3xl transition-all duration-300 hover:border-snake-500/30 hover:shadow-snake-500/20;
  }
  
  .card-glow {
    @apply bg-gray-800/60 backdrop-blur-xl border border-snake-500/20 rounded-2xl p-6 shadow-2xl shadow-snake-500/10 hover:shadow-3xl hover:shadow-snake-500/20 transition-all duration-300;
  }
  
  /* Professional Button Styles */
  .btn-premium {
    @apply bg-gradient-to-r from-snake-500 to-snake-600 hover:from-snake-600 hover:to-snake-700 text-white font-bold py-3 px-6 rounded-xl transition-all duration-300 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-snake-400 focus:ring-opacity-50 shadow-lg shadow-snake-500/20 hover:shadow-xl hover:shadow-snake-500/30;
  }
  
  .btn-danger {
    @apply bg-gradient-to-r from-red-500 to-red-600 hover:from-red-600 hover:to-red-700 text-white font-semibold px-4 py-2 rounded-lg transition-all duration-300 transform hover:scale-105 shadow-lg shadow-red-500/20;
  }
  
  /* Professional Input Styles */
  .input-premium {
    @apply bg-gray-700/60 backdrop-blur-sm border border-gray-600/50 rounded-xl px-4 py-3 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-snake-500 focus:border-transparent transition-all duration-300 shadow-lg shadow-gray-900/20 hover:border-snake-500/30;
  }
}

/* Custom scrollbar */
::-webkit-scrollbar {
  width: 8px;
}

::-webkit-scrollbar-track {
  @apply bg-gray-800;
}

::-webkit-scrollbar-thumb {
  @apply bg-snake-600 rounded-full;
}

::-webkit-scrollbar-thumb:hover {
  @apply bg-snake-500;
}

/* Game Canvas Styles */
.game-canvas {
  border: 2px solid #22c55e;
  box-shadow: 0 0 20px rgba(34, 197, 94, 0.3);
  transition: all 0.3s ease;
}

.game-canvas:hover {
  box-shadow: 0 0 30px rgba(34, 197, 94, 0.5);
}

/* Glow Effects */
.glow-green {
  box-shadow: 0 0 20px rgba(34, 197, 94, 0.5);
}

.glow-yellow {
  box-shadow: 0 0 20px rgba(234, 179, 8, 0.5);
}

.glow-purple {
  box-shadow: 0 0 20px rgba(147, 51, 234, 0.5);
}

/* Animated Background */
.animated-bg {
  background: linear-gradient(-45deg, #1f2937, #374151, #4b5563, #6b7280);
  background-size: 400% 400%;
  animation: gradient 15s ease infinite;
}

@keyframes gradient {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}

/* Pulse Animation */
.pulse-glow {
  animation: pulse-glow 2s ease-in-out infinite;
}

@keyframes pulse-glow {
  0%, 100% {
    box-shadow: 0 0 5px currentColor;
  }
  50% {
    box-shadow: 0 0 20px currentColor, 0 0 30px currentColor;
  }
}

/* Fade in animation */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.animate-fade-in {
  animation: fadeIn 0.5s ease-out;
}

/* Bounce animation */
@keyframes bounce {
  0%, 20%, 53%, 80%, 100% {
    transform: translate3d(0, 0, 0);
  }
  40%, 43% {
    transform: translate3d(0, -8px, 0);
  }
  70% {
    transform: translate3d(0, -4px, 0);
  }
  90% {
    transform: translate3d(0, -2px, 0);
  }
}

.animate-bounce {
  animation: bounce 1s ease-in-out;
}

/* Shake animation for errors */
@keyframes shake {
  0%, 100% {
    transform: translateX(0);
  }
  10%, 30%, 50%, 70%, 90% {
    transform: translateX(-5px);
  }
  20%, 40%, 60%, 80% {
    transform: translateX(5px);
  }
}

.animate-shake {
  animation: shake 0.6s ease-in-out;
}

/* Success pulse animation */
@keyframes successPulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
  100% {
    transform: scale(1);
  }
}

.animate-success-pulse {
  animation: successPulse 0.6s ease-in-out;
} 